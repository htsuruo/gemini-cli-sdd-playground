{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "models/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}